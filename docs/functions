function _get_docs_path() {
    filepath="/mnt/c/Users/mwhee/Documents/second-brain"
    echo $filepath
}

function docs() {
    echo "docs_cd:     --- cd into docs dir"
    echo "docs_pull:   --- Pull latest docs"
    echo "docs_push:   --- Commit and push current docs"
}

function docs_cd() {
    cd $(_get_docs_path)
}

function docs_pull() {
    git -C $(_get_docs_path) pull
}

function docs_push() {
    git -C $(_get_docs_path) add .
    git -C $(_get_docs_path) commit -m "docs: commit latest docs"
    git -C $(_get_docs_path) push
}
